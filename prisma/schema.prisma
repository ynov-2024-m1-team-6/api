generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int                @id @default(autoincrement())
  name        String
  firstName   String
  mail        String             @unique
  password    String
  adress      String
  zipCode     Int
  city        String
  phoneNumber Int
  isAdmin     Boolean            @default(false)
  wishlist    ProductWishlist[] 
}

model Product {
  id          Int                @id @default(autoincrement())
  username    String
  description String
  price       Float
  height      Float
  weight      Float
  ratio       String
  thumbnail   String
  active      Boolean            @default(false)
  wishlists   ProductWishlist[] 
}

model ProductWishlist {
  userId    Int
  productId Int
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@id([userId, productId])
}
