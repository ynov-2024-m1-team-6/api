model User {
  id          Int       @id @default(autoincrement())
  name        String
  firstName   String
  mail        String    @unique
  password    String
  adress      String
  zipCode     Int
  city        String
  phoneNumber Int
  isAdmin     Boolean   @default(false)
  wishlist    String[]
  cart        String[]
  Command     Command[]
}

model Product {
  id          Int       @id @default(autoincrement())
  username    String
  description String
  price       Float
  height      Float
  weight      Float
  ratio       String
  thumbnail   String
  active      Boolean   @default(false)
  commands    Command[] @relation("CommandToProduct")
}

model Command {
  id          Int           @id @default(autoincrement())
  orderNumber String        @default("00000000")
  products    Product[]     @relation("CommandToProduct")
  date        DateTime      @default(now())
  status      CommandStatus @default(PAID)
  userId      Int // Clé étrangère vers l'utilisateur
  user        User          @relation(fields: [userId], references: [id]) // Relation avec l'utilisateur
}

enum CommandStatus {
  PAID
  REIMBURSEMENT
  REFUNDED
}
